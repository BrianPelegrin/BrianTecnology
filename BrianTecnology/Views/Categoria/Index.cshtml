@model IEnumerable<BrianTecnology.Models.Categorium>

    @{
        ViewData["Title"] = "Index";
    }




<div class="row">
    <div class="col-12">
        <div class="card card-border">
            <div class="card card-header">
                <h3><strong>Lista de Usuarios</strong></h3>
                <div class="row">
                    <div class="col-12">
                         <div class="float-left">
                              <a asp-action="CrearCategoria" asp-controller="Categoria" class="btn btn-success"><i class="bi bi-plus-circle"></i> Nueva Categoria</a>
                         </div>
                    </div>
                </div>
            </div>
            <div class="card card-body">
                <form asp-action="Index" asp-controller="Categoria" method="get" class="row g-2">

                        <div class="col-auto">
                           
                            <label for="busqueda" class="form-control-plaintext">Descripcion: </label>
                        </div>
                        <div class="col-auto">
                           
                            <input type="text" name="busqueda" value="@ViewData["busqueda"]" class="form-control"> 
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary mb-3">Buscar</button>
                        </div>
                </form>

                <div class="table-responsive">

                    @if(Model.Count() >0)
                    {
                        <table class="table table-hover table-striped" id="tblUsuarios" width="100%" cellspacing="0">
                            
                            <thead class="table bg-primary">
                                <tr>
                                <th class="text-center text-white">Id de la Categoria</th>
                                <th class="text-center text-white">Descripcion</th>
                                <th class="text-center text-white">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">@Html.DisplayFor(m => item.IdCategoria)</td>
                                        <td class="text-center">@Html.DisplayFor(m => item.Descripcion)</td>
                                        

                                        <td class="text-center">
                                        <a class="btn btn-success bt-sm" asp-action="EditarCategoria" asp-controller="Categoria" asp-route-id="@item.IdCategoria"><i class="bi bi-pencil-square"></i></a>
                                        <a class="btn btn-danger bt-sm" asp-action="EliminarCategoria" asp-controller="Categoria" asp-route-id="@item.IdCategoria"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <h3 class="text-center"><strong>NO HAY REGISTROS</strong></h3>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
